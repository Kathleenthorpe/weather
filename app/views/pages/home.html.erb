<div class="main-body">
  <h1>WHAT IS THE WEATHER TODAY?</h1>
  <div class="location-input">
    <%= form_tag root_path, style: "z-index: 1000;", method: :get do %>
      <%= text_field_tag :query,
                params[:query],
                placeholder: "Where are you?",
                class: "location-input_box"
              %>
      <%= button_tag "Go!", class:"go-button" %>
    </div>
  <% end %>
  <div class="output">
    <% if @final_output.present?%>
      <div class="output-section">
        <h3>The temperature is:</h3>
        <p class="output-text">
          <%= @final_output["main"]["temp"]%>
        </p>
        <p class="output-section">degrees celcius</p>
      </div>
      <div class="output-section">
        <h3>Cloud cover:</h3>
        <p class="output-text">
          <%= @final_output["weather"][0]["description"]%>
        </p>
      </div>
    <% else %>
      <h3>Please type your location in the search bar</h3>
    <% end %>
  </div>
  <div class="to-do">
    <% if @final_output["main"]["temp"].to_i.between?(20, 34) %>
      <h3>The weather appears to be nice!</h3>
      <h2>GO TO THE PUB</h2>
    <% elsif @final_output["main"]["temp"].to_i.between?(35, 50)%>
      <h3>The weather is far too hot!</h3>
      <h2>FIND YOURSELF SOMEWHERE COOL</h2>
      <% else  @final_output["main"]["temp"].to_i.between?(1, 19)%>
      <h3>The weather is getting chilly</h3>
      <h2>GET THE HEATING ON</h2>
    <%end%>
    </div>
</div>
